{
    "manifest_version": 3,
    "name": "ChatGPT Writer",
    "version": "1.0",
    "description": "AI-powered email writing assistant",
    "action": {
      "default_popup": "index.html",
      "default_icon": {
        "16": "favicon.ico",
        "192": "logo192.png",
        "512": "logo512.png"
      }
    },
    "icons": {
      "16": "favicon.ico",
      "192": "logo192.png",
      "512": "logo512.png"
    },
    "permissions": [
      "storage"
    ],
    "host_permissions": [
      "https://api.openai.com/"
    ]
  }