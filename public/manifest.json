{
    "manifest_version": 3,
    "name": "Centered ChatGPT Writer",
    "version": "1.0",
    "permissions": [
        "activeTab",
        "scripting"
    ],
    "background": {
        "service_worker": "background.js"
    },
    "action": {},
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "content.js"
            ]
        }
    ],
    "web_accessible_resources": [
        {
            "resources": [
                "index.html",
                "static/*",
                "public/*"
            ],
            "matches": [
                "<all_urls>"
            ]
        }
    ]
}